{% extends "::base.html.twig" %}

{% block title %}AppBundle:NewCompanysemployee:newCompanysemployee{% endblock %}

{% block body %}
	{% if messageTrue is defined %}
		<div class="alert alert-success" role="alert">
  			<strong>{{ messageTrue }}</strong>
		</div>		
	{% endif %}
	{% if messageFalse is defined %}
		<div class="alert alert-danger" role="alert">
  			<strong>{{ messageFalse }}</strong>
		</div>		
	{% endif %}
	<div class="container">
	{{ form_start(form) }}

    	<div class="form-group row"> 
			{{ form_label(form.companyEmployeeName, 'Nombre del empleado' ,{'label_attr': {'id': 'labelEmpleado', 'class' : "col-sm-2 col-form-label"}}) }}
			<div class="col-sm-10">
			{{ form_widget(form.companyEmployeeName, { 'id': 'empleado', 'class': "form-control"}) }}
			</div>
        </div>
        <div class="form-group row"> 
			{{ form_label(form.companyEmployeeLastname, 'Apellido del empleado' ,{'label_attr': {'id': 'labelApellido', 'class' : "col-sm-2 col-form-label"}}) }}
			<div class="col-sm-10">
			{{ form_widget(form.companyEmployeeLastname, { 'id': 'Apellido', 'class': "form-control"}) }}
			</div>
        </div>
        <div class="form-group row"> 
			{{ form_label(form.companyEmployeeDni, 'Dni del empleado' ,{'label_attr': {'id': 'labelDni', 'class' : "col-sm-2 col-form-label"}}) }}
			<div class="col-sm-10">
			{{ form_widget(form.companyEmployeeDni, { 'id': 'dni', 'class': "form-control"}) }}
			</div>
        </div>
        <div class="form-group row"> 
			{{ form_label(form.company, 'Empresa' ,{'label_attr': {'id': 'labelDni', 'class' : "col-sm-2 col-form-label"}}) }}
			<div class="col-sm-10">
			{{ form_widget(form.company, { 'id': 'empresa', 'class': "form-control"}) }}
			</div>
        </div>
        <div class="form-group row"> 
			{{ form_label(form.save, 'Registrar' ,{'label_attr': {'id': 'labelRegistrar', 'class' : "col-sm-2 col-form-label"}}) }}
			<div class="col-sm-10">
			{{ form_widget(form.save, { 'id': 'registrar', 'class': "form-control"}) }}
			</div>
        </div>

    {{ form_end(form) }}
</div>

{% endblock %}
